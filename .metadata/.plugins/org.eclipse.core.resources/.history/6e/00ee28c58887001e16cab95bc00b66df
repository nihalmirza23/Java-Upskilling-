package ArmstrongNumber;

import java.util.Scanner;

public class SimpleCompound {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int simpleintrest = 0;
		
		int compoundintrest=0;
		
		//sum amount
		System.out.println("Enter Sum amount: ");
		int sum = sc.nextInt();
		
		//rate of intrest
		System.out.println("Enter Intrest rate: ");
		int rate=sc.nextInt();
		
		//Time period
		System.out.println("Enter Time period: ");
		int time=sc.nextInt();
		
		simpleintrest=sum*rate*time;
		
		System.out.println("simple intrest ="+simpleintrest);
		
		compoundintrest=sum*(1+rate)^time-sum;
		
		System.out.println("compound intrest="+compoundintrest);
		
		
		
		
	}
}
